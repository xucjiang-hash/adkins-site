      .top-actions{ display:flex; justify-content:flex-start; margin-bottom:16px; }
      .back-home,.back-muted{ text-decoration:none; font-size:14px; padding:6px 10px; border-radius:10px; color:#777; }
      .back-home:hover,.back-muted:hover{ background:#f0f0f0; color:#111; }

      .hero-img img{ width:100%; border-radius:14px; border:1px solid #e5e5e5; }
      .hero-text{ margin-top:20px; }
      .kicker{ font-size:13px; letter-spacing:.14em; opacity:.6; }
      .title{ font-size:clamp(34px,5vw,54px); margin:8px 0 0; }
      .subtitle{ color:#777; margin-top:10px; }

      .panel{ margin-top:28px; }
      .grid{ list-style:none; padding:0; display:grid; gap:10px; }
      .card{ display:grid; grid-template-columns:56px 1fr; gap:14px; padding:14px; background:#f5f5f5; border-radius:14px; }
      .badge{ font-weight:700; }
      .film-title{ font-weight:600; }
      .meta{ color:#666; font-size:13px; margin-top:6px; }

      .footnote{ margin-top:30px; padding-top:18px; border-top:1px solid #e5e5e5; text-align:center; color:#777; font-size:14px; }
    </style>
