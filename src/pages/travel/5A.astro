---
const pageTitle = "国内 5A 足迹";
const subtitle = "5A 景区清单 · 按省份整理";

const spots = [
  {
    province: "天津市",
    items: ["天津古文化街旅游区（津门故里）"],
  },
  {
    province: "河北省",
    items: ["承德市承德避暑山庄及周围寺庙景区"],
  },
  {
    province: "山西省",
    items: ["大同市云冈石窟景区"],
  },
  {
    province: "辽宁省",
    items: ["大连市金石滩景区"],
  },
  {
    province: "江苏省",
    items: ["苏州市周庄古镇景区", "苏州市苏州园林（拙政园－留园－虎丘）"],
